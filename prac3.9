#include <iostream>

class Max {
private:
    int num_1, num_2;

public:
    
    void input() {
        std::cout << "Enter the first number: ";
        std::cin >> num_1;
        std::cout << "Enter the second number: ";
        std::cin >> num_2;
    }
    int largest() {
        return (num_1 > num_2) ? num_1 : num_2;
    }

    void display() {
        std::cout << "First Number: " << num_1 << std::endl;
        std::cout << "Second Number: " << num_2 << std::endl;
        std::cout << "Largest Number: " << largest() << std::endl;
    }
};

int main() {
    Max maxObj;

    maxObj.input();
    maxObj.display();

    return 0;
}
